<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<%= javascript_include_tag "posts.js" %>


<div class="container">
    <div class="row">
        <div class="col-8">
            <% @posts.each do |post| %>
            <div class="insta-post">
                <div class="post-meta"> 

                    <%= link_to image_tag(post.user.image.thumb.url, class: "img-circle"), profile_path(post.user.username) %> 
                    <%= link_to post.user.username, profile_path(post.user.username), class: "text-dark" %> 
                </div>
                    <%= image_tag post.image.url, class: "img img-fluid" %>
                    <div class="post-actions"> 
                        <i class="fa fa-heart like-<%= post.id %> <%= "active" if post_liked_by_user?(post.id) %> fa-2x post-like" data-id="<%= post.id %>"> </i>
                        <i class="fa fa-comment fa-2x post-comment"> </i>
                    </div>
                   

                    <div class="post-details">
                        <p><strong> <%= post.total_likes %> likes </strong></p>
                        <p><strong> <%= link_to post.user.username, profile_path(post.user.username), class: "text-dark" %> </strong></p>
                        <%= simple_format post.description %>

                        <p class="text-muted"> <%= time_ago_in_words post.created_at %> ago</p>
                    </div>
            </div>
            <% end %>
        </div>
        <div class="col-4">
            <div class="account-summary">
                <p>
                <%= link_to image_tag(current_user.image.thumb.url, class: "img-circle"), profile_path(current_user.username) if current_user.image %>
                <strong> <%= current_user.username %></strong><br>
                </p>
                <p>
                <%= current_user.full_name %>
                </p>
            </div>

            <div class="follower-suggestions">
                <%= link_to "View all", "#", class: "float-right text-dark" %>
                <p class="text-muted"> Suggestions for you </p>
            </div>
        </div>
    </div>

</div>

