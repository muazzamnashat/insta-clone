
<div class="container">
    <div class="row">
        <div class="col-4">
            <%= profile_picture(@user) %>
        </div>

        <div class="col-8 text-left">
            <div class="row">
                <div class="col-6">
                    <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-muted btn-custom float-right" if can_edit_profile?(@user.id) %>
                    <h1> <%= @user.full_name %> </h1>
                </div>
            </div>

            <div class="row profile-stats">
                <div class="col-4"> 
                    <%= @user.posts.count %> posts
                </div>
                <div class="col-4">
                    <%= @user.followers.count %> followers  
                </div>
                 <div class="col-4">
                    <%= @user.followings.count %> following  
                </div>
            </div>

            <p> <%= @user.full_name %> </p>
            <p> <%= simple_format @user.description %> </p>

            <p> <%= link_to @user.website if @user.website %> </p>

        </div>
    </div>


    <div class="row profile-posts">
        <% @posts.each do |post| %>
            <div class="col-4">
                <div class="insta-post">
                    <%= image_tag post.image.url, class: "img img-fluid" %>
                </div>
            </div>
        <% end %>
    </div>

</div>