
<div class="container">
    <div class="row">
        <% if current_user.image.thumb.url %>
            <div class="col-4">
            <%= image_tag @user.image.url, width: "200px", class: "img-circle profile-pic" %>
        </div>
        <% end %>

        <div class="col-8 text-left">
            <h1> <%= @user.full_name %> </h1>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-secondary" %>

            <div class="profile-stats"> <%= @user.posts.count %> posts </div>
            <div class="profile-stats"> <%= @user.total_followers %> followers </div>
            <div class="profile-stats"> <%= @user.total_following %> following </div>

            <p> <%= @user.full_name %> </p>
            <p> <%= simple_format @user.description %> </p>

            <p> <%= link_to @user.website if @user.website %> </p>

        </div>
    </div>


    <div class="row profile-posts">
        <% @posts.each do |post| %>
            <div class="col-4">
                <div class="insta-post">
                    <%= image_tag post.image.url, class: "img img-fluid" %>
                </div>
            </div>
        <% end %>
    </div>

</div>